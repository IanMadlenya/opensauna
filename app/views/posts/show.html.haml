.page-header
  %h1 Post


%h3=@post.title

.lead
  =raw @post.body


%ul.thumbnails
  -@post.images.each do |image|
    %li.thumbnail.span3=image_tag image


.well
  =link_to "Edit", edit_post_path(@post), :class => "btn"
  =link_to "Delete", post_path(@post), :method => :delete, :class => "btn btn-danger"

=link_to "Back", posts_path
